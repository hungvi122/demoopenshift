<div class="single-related-products row" ng-controller="DoneHotCtrl">
		<div class="container">
			<h3 class="animated wow slideInUp animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInUp;">Done Products</h3>
			
			<div class="new-collections-grids">
			<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" ng-repeat="item in product">
				<a href="#/product/{{item._id}}" class="img-product"> <img src="{{item.image}}" class="img-responsive img-responsive-product" style="width:250px; height:250px;" alt="">
				</a>
					<div class="title label label-info">{{item.name}}</div>
					<div class="info-product">
						<div class="number-bids"><span class="label-number label label-default">Bids:</span> <span class="label label-info text-number-bids">{{item.numberBID}}</span></div>
						
						<div class="user-bids">
							<span class="label label-default user-name ">
								{{item.idUSer}}
							</span>
							<div class="price-product label label-info">
								{{item.costCurent}}
							</div>
						</div>
						
						
					</div>
				<div class="clearfix"></div>	

			</div>
				<div class="clearfix"> </div>
			</div>
		</div>
	</div>